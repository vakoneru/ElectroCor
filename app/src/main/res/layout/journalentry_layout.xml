<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/mainbg">

    <Button
        android:id="@+id/journalSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:layout_alignBottom="@+id/journalEditText"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/journalEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter journal entry here."
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/journalSubmitButton"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="4"
        android:maxLength ="2000" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:id="@+id/separator"
        android:visibility="visible"
        android:background="@android:color/darker_gray"
        android:layout_above="@id/journalEditText" />

</RelativeLayout>